{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/build/game.exe",
      "cwd": "${workspaceRoot}/run_tree/",
      "preLaunchTask": "Game [debug] [clang]"
    },
    {
      "name": "Debug [asan]",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/build/game.exe",
      "cwd": "${workspaceRoot}/run_tree/",
      "preLaunchTask": "Game [debug] [asan] [clang]",
    },
    {
      "name": "Debug [ubsan]",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/build/game.exe",
      "cwd": "${workspaceRoot}/run_tree/",
      "preLaunchTask": "Game [debug] [ubsan] [clang]",
      "environment": [
        {
          "name": "UBSAN_OPTIONS",
          "value": "print_stacktrace=1"
        }
      ]
    },
    {
      "name": "Release",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/build/game.exe",
      "cwd": "${workspaceRoot}/run_tree/",
      "preLaunchTask": "Game [release] [clang]"
    },
  ]
}
