{
  "version": "2.0.0",
"windows": {
    "options": {
      "shell": {
        "executable": "cmd.exe",
        "args": [
          "/d",
          "/c",
          "D:\\Programs\\vs-community-22\\VC\\Auxiliary\\Build\\vcvars64.bat",
          "&"
        ]
      }
    }
  },
  "tasks": [
    {
      "label": "Game [debug]",
      "type": "shell",
      "command": "build",
      "args": [
        "game",
        "debug"
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Game [release]",
      "type": "shell",
      "command": "build",
      "args": [
        "game",
        "release"
      ],
      "group": {
        "kind": "build"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Game [debug] [asan]",
      "type": "shell",
      "command": "build",
      "args": [
        "game",
        "debug",
        "asan"
      ],
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
