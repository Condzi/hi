{
  "cmake.buildTask": true,
  "task.autoDetect": "off",
  "cSpell.words": [
    "debugbreak",
    "toggable"
  ],
  "files.associations": {
    "cstdint": "cpp",
    "algorithm": "cpp",
    "cmath": "cpp",
    "iterator": "cpp",
    "initializer_list": "cpp",
    "utility": "cpp",
    "xutility": "cpp",
    "memory": "cpp",
    "limits": "cpp",
    "cstddef": "cpp",
    "xmemory": "cpp",
    "system_error": "cpp",
    "xlocale": "cpp",
    "xiosbase": "cpp",
    "*.rh": "cpp",
    "format": "cpp",
    "xstring": "cpp",
    "charconv": "cpp"
  },
  "C_Cpp.errorSquiggles": "disabled",
  "cSpell.enabled": false,
  "C_Cpp.intelliSenseEngineFallback": "disabled",
  "clangd.arguments": [
    "--clang-tidy",
    "--background-index",
    "--background-index-priority=high",
    "-j=8",
    "--header-insertion=never"
  ],
  "clangd.checkUpdates": true,
  "debug.onTaskErrors": "abort"
}
